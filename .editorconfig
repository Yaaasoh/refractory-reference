# EditorConfig is awesome: https://EditorConfig.org
# エンコーディング・改行コード統一設定

root = true

# 全ファイル共通
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# シェルスクリプト
[*.sh]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.bash]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

# Python
[*.py]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# JSON/YAML
[*.{json,yaml,yml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# Markdown
[*.md]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false

# Windowsバッチファイルのみ CRLF
[*.{bat,cmd}]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4

# Makefile
[Makefile]
charset = utf-8
end_of_line = lf
indent_style = tab
